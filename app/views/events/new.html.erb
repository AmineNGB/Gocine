

<%= simple_form_for(@event) do |f| %>
  <%= f.input :date %>
  <%= f.input :schedule, collection: [[:matin, 'matin'], [:apresmidi, 'apresmidi'], [:soir, 'soir']], as: :radio_buttons %>
  <%= f.input :cinema_id, collection: Cinema.pluck(:name, :id) %>

  <%= f.input :user_ids, as: :select, collection: current_user.friends, input_html: { multiple: true } %>

  <%= f.submit "add a date", class: 'btn btn-primary' %>
<% end %>
