<% if @event.seance.present? %>
<div id="center" class="mb-2">
  <!-- <%=image_tag "rideau.png", class: "size"%> -->
  <div id="lock">
    <h1 class="color"><strong>Votre soirée</strong></h1>
    <%= image_tag (@event.seance.film.photo_url), class: "affiche-finale fade-in"%>
    <div class="info enter-in" >
      <h4>Cinéma :</h4>
      <p><strong><%= Cinema.find(@event.cinema_id).name %></strong></p>
      <h4>Horaire :</h4>
      <p><strong><%= Seance.find(@event.seance_id).horaire.time.to_formatted_s(:short) %></strong></p>
      <!-- <a><%= Seance.find(@event.seance_id).link %></a> -->
      <h4>Participants :</h4>
      <% @event.guests.confirmed.each do |guest|%>
      <% user = guest.user %>
      <div class="d-flex justify-content-center font-weight-bold">
        <%= user.nom %>
        <%= user.prenom %>
      </div>
      <%end%>
      <a class="btn btn-dark mt-4" href="<%= Seance.find(@event.seance_id).link %>">Réservez ici !</a>
    </div>
    <!-- <h3>Bon Film !</h3> -->
  </div>
</div>
<% else %>
<div class="d-flex flex-column justify-content-center text-center mt-4" id="loading">
</div>
<h3 class="d-flex justify-content-center text-center mt-4">Veuillez patientez, nous choisisons le film selon vos préférences ...</h3>
<% end %>
