  <%= simple_form_for :query, url: root_path, method: "GET", html: { class: 'form-inline' } do |f| %>
    <%= f.input :id, as: :select, collection: Cinema.all, input_html: {class: "selectpicker form-control", "data-live-search" => "true",value: ""}, label: "Choisissez votre cinÃ©ma", required: false %>
    <%= f.submit "Search", class: "btn btn-dark" %>
  <% end %>
  <div id="main">
    <% @films.each do |film| %>
      <div class="movie-card">
        <%= link_to film_path(film) do %>
          <%= image_tag film.photo_url, size: "160x200", class: "affiche-bord" %>
          <% if @favorites.include? film.id %>
          <% else %>
            <%= link_to film_favorites_path(film.id),
                      class: "plus-icon",
                      method: :post,
                      remote: true do %>
              <i class="fas fa-plus-square fa-3x"></i>
            <% end %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
