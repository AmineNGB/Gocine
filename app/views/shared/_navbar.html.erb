<div class="navbar navbar-expand navbar-light navbar-lewagon">
  <%= link_to "/", class: "navbar-brand" do %> <%= image_tag "logo.png" %> <%
  end %>
    <!-- <%= link_to new_event_path, class: "navbar-plus" do %>
  <%= image_tag "plus.svg" %>
  <% end %> -->
    <div class="nav-btn">
      <% if user_signed_in? %>

      <div class="star btn-nav">
        <%= link_to favorites_path, class: "navbar-clip" do %> <%= image_tag "heart.svg" %>
        Favoris <% end %>
      </div>
      <div class="friends-icon btn-nav">
          <% if current_user.requested_friends.count > 0  %>
            <div class="notification-badge friends-notification">
              <%= current_user.requested_friends.count %>
            </div>
          <% end %>
        <%= link_to friends_path, class: "navbar-clip" do %> <%= image_tag "friends.svg" %>
          Amis <% end %>
      </div>
      <% end %>
      <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >

        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <% if user_signed_in? %>
            <li class="nav-item dropdown">
              <%= image_tag "scream.svg", class: "avatar-large dropdown-toggle", id:
          "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true,
          'aria-expanded': false %>
            <% if current_user.pending_events.count > 0  %>
              <div class="notification-badge events-notification">
                <%= current_user.pending_events.count %>
              </div>
            <% end %>
              <div
            class="dropdown-menu dropdown-menu-right"
            aria-labelledby="navbarDropdown"
          >

                <%= link_to "Mon compte", edit_user_registration_path, class: "dropdown-item" %>
                <%= link_to "Ma liste de films", favorites_path, class: "dropdown-item" %>
                <%= link_to "Mes sorties", my_events_path, class: "dropdown-item" %>
                <% if current_user.pending_events.count > 0  %>
                  <div class="notification-badge events-notification-list">
                      <%= current_user.pending_events.count %>
                  </div>
                <% end %>
                <%= link_to "Organiser un ciné", new_event_path, class: "dropdown-item" %>
                <%= link_to "Déconnexion", destroy_user_session_path, method: :get, class: "dropdown-item" %>
              </div>
              <i class="fas fa-caret-down" id="triangle"></i>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Connexion", new_user_session_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
